#:import LOGO_LOADING Images.LOGO_LOADING
#:import ICON_LANGUAGE_SCREEN Images.ICON_LANGUAGE_SCREEN
#:import OPACITY_ZERO Constants.OPACITY_ZERO
#:import ICON_LIGHT_OFF Images.ICON_LIGHT_OFF
#:import ICON_LIGHT_ON Images.ICON_LIGHT_ON

<HomeScreen>:
    name: "home"
    top_panel_layout: top_panel_layout
    top_panel_button: top_panel_button
    loading_layout: loading_layout
    loading_label: loading_label

    light_1_icon: light_1_icon
    light_1_button: light_1_button
    temp1_label: temp1_label
    hum1_label: hum1_label

    light_2_icon: light_2_icon
    light_2_button: light_2_button
    temp2_label:temp2_label
    hum2_label: hum2_label



    AppBackground:
    # FullGrid:

    TopPanelLayout:
        id: top_panel_layout
        TopPanelSubLayout:
            TopPanelLogo:
                id:top_panel_logo
            TopPanelLogoButton:
                id: top_panel_button
                pos:top_panel_logo.pos


    
    MenuLayout:
        id: menu2_layout
        cols: 2
        MenuSublayout:
            MenuLabel:
                text: "Room 1"
                pos: '0dp', '500dp'
            TemperatureIcon:
                pos: '-400dp', '350dp'
            TempLabel:
                id: temp1_label

            HumidityIcon:
                pos: '-400dp', '150dp'
            HumLabel:
                id: hum1_label

            
            LightIcon:
                id: light_1_icon
                source: ICON_LIGHT_OFF
            MenuLabel:
                id: light_1_label
            Menu3Button:
                id: light_1_button
                pos: light_1_icon.pos
                size: light_1_icon.size
                outside_label: light_1_label
                background_image: light_1_icon
                ripple_color: app.root.COLOR_BACKGROUND
                

        MenuSublayout:
            MenuLabel:
                text: "Room 2"
                pos: '0dp', '500dp'
            TemperatureIcon:
                pos: '-400dp', '350dp'
            TempLabel:
                id: temp2_label
            HumidityIcon:
                pos: '-400dp', '150dp'
            HumLabel:
                id: hum2_label

            LightIcon:
                id: light_2_icon
                source: ICON_LIGHT_OFF
            MenuLabel:
                id: light_2_label
            Menu3Button:
                id: light_2_button
                pos: light_2_icon.pos
                size: light_2_icon.size
                outside_label: light_2_label
                background_image: light_2_icon
                ripple_color: app.root.COLOR_BACKGROUND



    AnchorLayout:
        id: loading_layout
        opacity: OPACITY_ZERO

        Image:
            color: app.root.COLOR_ICON
            keep_ratio: True
            size_hint_y: None
            height: '300dp'
            source: LOGO_LOADING
            keep_data: True

        RelativeLayout:
            size: self.parent.size
            pos: self.parent.pos

            AnchorLayout:
                pos: '0dp', '-246dp'
                Label:
                    id: loading_label
                    color: app.root.COLOR_ICON
                    font_size: 30
                    bold: True
                    size: self.texture_size
                    text_size: None, None
                    halign: 'left'
                    valign: 'middle'

 

