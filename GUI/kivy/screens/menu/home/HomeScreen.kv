                id: menu2_icon_right
            MenuLabel:
                id: menu2_label_right
            TouchRippleButton:
                id: menu2_button_right
                outside_label: menu2_label_right
                background_image: menu2_icon_right
                ripple_color: app.root.COLOR_BACKGROUND


    AnchorLayout:
        id: loading_layout
        opacity: OPACITY_ZERO

        Image:
            color: app.root.COLOR_ICON
            keep_ratio: True
            size_hint_y: None
            height: '300dp'
            source: LOGO_LOADING
            keep_data: True

        RelativeLayout:
            size: self.parent.size
            pos: self.parent.pos

            AnchorLayout:
                pos: '0dp', '-246dp'
                Label:
                    id: loading_label
                    color: app.root.COLOR_ICON
                    font_size: 30
                    bold: True
                    size: self.texture_size
                    text_size: None, None
                    halign: 'left'
                    valign: 'middle'

 
