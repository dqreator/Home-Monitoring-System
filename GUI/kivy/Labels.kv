#:import DEG_C Constants.DEG_C
#:import CM3 Constants.CM3


<ButtonLabel@Label>:
    size_hint: None, None
    color: app.root.COLOR_BACKGROUND
    font_size: 32
    bold: True
    size: self.texture_size

<MenuLabel@Label>:
    size_hint_y: 0.2
    color: app.root.COLOR_ICON
    font_size: 36
    bold: True
    halign: 'center'
    valign: 'middle'


<TempLabel@Label>:
    size_hint_y: 0.2
    text: "0.00"
    pos: '0dp', '360dp'
    color: app.root.COLOR_ICON
    font_size: 36
    bold: False
    halign: 'center'
    valign: 'middle'

<HumLabel@Label>:
    size_hint_y: 0.2
    text: "0 %"
    pos: '0dp', '150dp'
    color: app.root.COLOR_ICON
    font_size: 36
    bold: False
    halign: 'center'
    valign: 'middle'
